{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": true,
    "typeRoots": ["./node_modules/@types"],
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/tests/**", "src/tests"],
  "include": [
    "src/**/*.ts",
    "src/config/**/*.ts",
    "src/controllers/**/*.ts",
    "src/db/**/*.ts",
    "src/middleware/**/*.ts",
    "src/models/**/*.ts",
    "src/routes/**/*.ts",
    "src/services/**/*.ts",
    "src/util/**/*.ts"
  ]
} 