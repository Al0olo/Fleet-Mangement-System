# Server settings
PORT=3002
NODE_ENV=development
LOG_LEVEL=info

# MongoDB settings
MONGODB_URI=mongodb://mongodb:27017/fleet-tracking
MONGODB_RETRY_CONNECTS=5
MONGODB_RETRY_INTERVAL=5000

# Redis settings
REDIS_URI=redis://redis:6379
REDIS_RETRY_CONNECTS=5
REDIS_RETRY_INTERVAL=5000

# Kafka settings
KAFKA_BROKERS=kafka:9092
KAFKA_CLIENT_ID=tracking-service
KAFKA_GROUP_ID=tracking-group
KAFKA_LOCATION_TOPIC=vehicle-location
KAFKA_STATUS_TOPIC=vehicle-status
KAFKA_EVENT_TOPIC=vehicle-event

# External Services
MAINTENANCE_SERVICE_URL=http://maintenance-service:3003